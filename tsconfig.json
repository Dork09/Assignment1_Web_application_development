{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": false
  },
  "ts-node": {
    "esm": true
  },
  "include": [
    "index.ts",
    "controllers/**/*.ts",
    "routes/**/*.ts",
    "model/**/*.ts",
    "test/**/*.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
